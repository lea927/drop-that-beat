- if tracks
  - tracks.each do |track|
    %div 
      %div
        %p
          %strong
            = track.name
          = 'by'
          = track.artist
        %audio{ controls: true }
          %source{ src: track.preview_url, type: 'audio/mp4' }    
      = link_to 'Add Song', tracks_path(track.attributes.merge(room_id: @room.id)), |
        method: 'POST', remote: true
- else
  %p No tracks found
