%section.h-75.d-flex.justify-content-center.flex-column
  .container-fluid.row.justify-content-center.text-dark
    .col-md-7.col-lg-5.bg-light
      .p-4.p-md-5
        %h3.text-center.mb-4 Forgot your password?
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          .text-danger
            = render "devise/shared/error_messages", resource: resource
          .form-floating
            = f.email_field :email, id: 'user_email', class: 'form-control', placeholder: 'email', autocomplete: "email", required: true
            = f.label :email, for: 'user_email'
          .actions.my-4.d-flex.flex-column.justify-content-center
            = f.submit "Send me reset password instructions", class: 'btn btn-secondary'
